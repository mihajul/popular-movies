<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<com.udacity.popularmovies.view.AutofitRecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_list"
    android:name="com.udacity.popularmovies.MovieListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/item_margin"
    android:columnWidth="@dimen/column_width"
    android:clipToPadding="false"
    tools:context="com.udacity.popularmovies.MovieListActivity"
    tools:listitem="@layout/movie_list_content" />

    <TextView
    android:id="@+id/tv_error_message_display"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:text="@string/error_message"
    android:textSize="20sp"
    android:visibility="invisible" />

    <ProgressBar
    android:id="@+id/pb_loading_indicator"
    android:layout_height="42dp"
    android:layout_width="42dp"
    android:layout_gravity="center"
    android:visibility="invisible" />
</FrameLayout>